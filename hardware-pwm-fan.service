[Unit]
Description=raspberry pi hardware fan control
After=basic.target
Wants=basic.target

[Service]
Restart=on-failure
RestartSec=5s
ExecStart=/home/pi/scripts/hardware_pwm_fan -v \
            --sleep=5 \
            --hard-pwm-channel=0 \
            --fan-low-pct=30 \
            --high-temp=75 \
            --off-temp=40

[Install]
WantedBy=multi-user.target
